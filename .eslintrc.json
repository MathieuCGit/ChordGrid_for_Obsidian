{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-restricted-imports": ["error", { "paths": ["./DebugLogger", "../utils/DebugLogger", "../DebugLogger"] }],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='DebugLogger']",
        "message": "DebugLogger is not allowed in production code."
      }
    ]
  }
}
